<Page
    x:Class="_2.SemesterProjekt.View.OpretBarn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_2.SemesterProjekt.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <TextBlock>Skriv fornavn:</TextBlock>
            <TextBox Name="OpretbarnFornavn"></TextBox>
            <TextBlock>Skriv efternavn:</TextBlock>
            <TextBox Name="OpretBarnEfternavn"></TextBox>
            <TextBlock>Fødselsdag:</TextBlock>
            <TextBox Name="OpretbarnFødselsdag"></TextBox>
            <Button Margin="0,5,0,0">Opret</Button>
        </StackPanel>
        
    </Grid>
</Page>
